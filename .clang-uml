add_compile_flags:
  - --target=x86_64-w64-mingw32
  - -fparse-all-comments
  - -Wno-unknown-warning-option
  - -DUSE_THREADS_POSIX
remove_compile_flags:
  - -Wunused-command-line-argument
# Change to directory where compile_commands.json is
compilation_database_dir: .
# Change to directory where diagram should be written
output_directory: ./docs/diagrams
diagrams:
  system_class_diagram:
    type: class
    title: This Diagram shows the relationship between all system components
    glob:
      - src/dbModule/*.cpp
      - src/requestModule/*.cpp
      - src/requestModule/Requests/*.cpp
      - src/serverModule/*.cpp
      - app/*.cpp
    include:
      paths:
        - src/
        - inc/
    exclude:
      paths:
        - lib/
        - build/
        - tests/
      namespaces:
        - std
        - tests  # Exclude Google Test namespace
    generate_packages: true
    package_type: directory
    generate_links:
      link: "{% if existsIn(element, \"doxygen_link\") %}{{ element.doxygen_link }}{% endif %}"
      tooltip: "{% if existsIn(element, \"comment\") and existsIn(element.comment, \"brief\") %}{{ abbrv(trim(replace(element.comment.brief.0, \"\\n+\", \" \")), 256) }}{% else %}{{ element.name }}{% endif %}"
  include_diagram:
    type: include
    glob:
      - src/dbModule/*.cpp
      - src/requestModule/*.cpp
      - src/requestModule/Requests/*.cpp
      - src/serverModule/*.cpp
      - app/*.cpp
    include:
      paths:
        - src
        - inc
        - lib/
        - tests
    exclude:
      namespaces:
        - std
        - tests  # Exclude Google Test namespace
      paths:
        - lib/
  sequence_diagram:
    type: sequence
    glob:
      - src/dbModule/*.cpp
      - src/requestModule/*.cpp
      - src/requestModule/Requests/*.cpp
      - src/serverModule/*.cpp
      - app/*.cpp
    include:
      paths:
        - src/
        - inc/
        - lib/
        - tests/
    generate_metadata: true
    combine_free_functions_into_file_participants: true
    inline_lambda_messages: true
    generate_condition_statements: true
    generate_method_arguments: full
    generate_return_types: true
    generate_message_comments: true
    message_comment_width: 35
    exclude:
      namespaces:
        - std
        - tests  # Exclude Google Test namespace
      paths:
        - lib/
    start_from:
      - function: "LoginRequest::execute(const QJsonObject &,QMutex &)"
